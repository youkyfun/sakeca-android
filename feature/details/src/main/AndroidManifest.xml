<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application>
        <activity
            android:name=".presentation.RecipeDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_recipe_detail"
            android:theme="@style/Theme.Sakecaandroid" />
        <activity
            android:name=".presentation.RecipeDetailsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="https" />
                <data android:host="www.youkydesign.com" />
                <data android:scheme="android-app" />
                <data android:host="com.youkydesign.recipe" />
                <data android:pathPrefix="/details" />
            </intent-filter>
        </activity>
    </application>

</manifest>