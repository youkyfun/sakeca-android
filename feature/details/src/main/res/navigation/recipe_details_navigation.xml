<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recipe_details_navigation"
    android:label="Recipe Details"
    app:startDestination="@id/recipeDetailActivity">

    <activity
        android:id="@+id/recipeDetailActivity"
        android:name="com.youkydesign.sakeca.feature.details.presentation.RecipeDetailActivity"
        android:label="RecipeDetailActivity">
        <argument
            android:name="rId"
            app:argType="string" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="android-app://com.youkydesign.recipe/details/{rId}" />
    </activity>
</navigation>